{
    "name": "sideso/sms-message",
    "description": "SMS Message provides a base class for SMS messages and a default implementation for the Hablame.co API.",
    "homepage": "https://github.com/sideso/sms-message",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Trujillo",
            "email": "ctrujillo@sideso.com.co",
            "homepage": "https://sideso.com.co",
            "role": "CTO"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.4 || ^7.0",
        "illuminate/notifications": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.0 || ^9.0 || ^10.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sideso\\SMS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sideso\\SMS\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
